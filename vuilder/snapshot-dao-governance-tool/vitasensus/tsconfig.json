{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"outDir": "build",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["scripts/**/*", "test/**/*"],
	"exclude": ["node_modules"]
}
